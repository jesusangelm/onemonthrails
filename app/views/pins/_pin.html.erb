<div class="box">
  <%= link_to (image_tag pin.image(:medium)), pin %>
  <p class="description">
    <%= pin.description %>
  </p>
  <p>
    <strong>
      Publicado por <%= pin.user.email %>
    </strong>
  </p>
  <% if current_user == pin.user %>
    <p>
      <%= link_to 'Editar', edit_pin_path(pin) %>
      <%= link_to 'Eliminar', pin, method: :delete, data: { confirm: 'Estas seguro?' } %>
    </p>
  <% end %>
</div>
